<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.text_field :content , required: true, placeholder: 'What would you like to say?' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image , required: true%>
  </div>
  <div>
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>
