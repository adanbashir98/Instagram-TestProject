<div class='user-tabs'>
  <a class='tab active'><i class='fa fa-th'></i>POSTS</a>
</div>
<% if @posts.count > 0 %>
<div class='user-images'>
  <% @posts.each do |post|%>
    <div class='wrapper'>
      <%=link_to post_path(post) do %>
          <%if post.images.attached? %>
          <%= image_tag post.images.first, class:'border' %>
          <% end %>
        <% end %>
    </div>
  <% end %>
</div>
<% else %>
No posts to show!
<% end %>

